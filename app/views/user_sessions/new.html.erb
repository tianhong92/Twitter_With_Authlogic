<h1>Sign In</h1>

<%= form_for @user_session, as: :user_session, url: { action: :create } do |f| %>
    <% if @user_session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user_session.errors.count, 'error') %> prevented you from logging in:</h2>
          <ul>
            <% @user_session.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :login, 'Email' %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit 'Sign in' %>
    </div>
<% end %>
<%= link_to 'forgot password?', root_url %>

<script type="text/javascript">
  document.getElementById('user_session_login').focus();
</script>