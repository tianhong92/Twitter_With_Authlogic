<%= form_for @user_session, as: :user_session, url: { action: :create } do |f| %>
    <% if @user_session.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user_session.errors.count, 'error') %> prevented you from logging in:</h2>
          <ul>
            <% @user_session.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="form-group">
      <%= f.text_field :email, class:"form-control input-lg", placeholder:"Email:"%>
    </div>
    <div class="field">
      <%= f.password_field :password,class:"form-control input-lg",placeholder:"Password:" %>
    </div>
    <div class="actions">
      <%= f.submit 'Sign in', class:"btn btn-primary btn-lg btn-block" %>
    </div>
<% end %>


